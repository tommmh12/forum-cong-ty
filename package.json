{
  "name": "nexus",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "shared",
    "client",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@nexus/client",
    "dev:client": "npm run dev --workspace=@nexus/client",
    "dev:server": "npm run dev --workspace=@nexus/server",
    "start:server": "npm run start --workspace=@nexus/server",
    "build": "npm run build:shared && npm run build:client && npm run build:server",
    "build:client": "npm run build --workspace=@nexus/client",
    "build:server": "npm run build --workspace=@nexus/server",
    "build:shared": "npm run build --workspace=@nexus/shared",
    "preview": "npm run preview --workspace=@nexus/client",
    "test": "npm run test --workspaces --if-present",
    "test:client": "npm run test --workspace=@nexus/client",
    "test:server": "npm run test --workspace=@nexus/server",
    "test:shared": "npm run test --workspace=@nexus/shared",
    "clean": "npm run clean --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "typescript": "~5.8.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
